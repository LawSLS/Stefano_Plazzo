{% extends 'base.html.twig' %}

{% block title %}{{titlePage}}{% endblock %}

{% block body %}
<h1 class="text-center my-5">Listes des users dans la base de donnÃ©es</h1>

<section class="d-flex justify-content-center">
    <p><a href={{path('app_dashboard_bien')}} class="btn btn-primary me-5">Liste des biens</a></p>
    <p><a href={{path('app_dashboard')}} class="btn btn-primary">Dashboard</a></p>
</section>

<section id="usersAdminList">
    {% for user in users %}
    <div class="mx-5 mb-5 rounded-1 border border-secondary bg-secondary text-white">
        <h3 class="text-end">{{head[0]}} : {{user.id}}</h3>
        <div class="d-flex px-3 py-2">
            <p class="me-5 px-3">{{head[1]}} : {{user.email}}</p>
            <p class="me-5 px-3">{{head[2]}} : {{user.roles[0]}}</p>
            <p class="me-5 px-3">{{head[3]}} : {{user.password}}</p>
            
        </div>
        <div class="d-flex px-3 py-2">
            <p class="me-5 px-3">{{head[10]}} : {{user.country}}</p>
            <p class="me-5 px-3">{{head[13]}} : {{user.nom}}</p>
            <p class="me-5 px-3">{{head[14]}} : {{user.prenom}}</p>
            <p class="me-5 px-3">{{head[12]}} : {{user.isActive}}</p>
        </div>
        <div class="d-flex justify-content-end">
            <a href={{path('app_show_user', {id: user.id})}} class="btn btn-primary">View</a>
            <a href={{path('app_edit_user', {id: user.id})}} class="btn btn-primary">Update</a>
            <button>Delete</button>
        </div>
    </div>    
    {% endfor %} 
</section>
{% endblock %}
