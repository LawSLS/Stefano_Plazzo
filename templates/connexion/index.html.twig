{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="d-flex flex-column min-vh-100">
		<main class="flex-fill d-flex align-items-center">
			<div class="container d-flex justify-content-center">
				<form action="{{ path('app_login_check') }}" method="post" class="my-5 py-5 rounded-2 bg-dark-subtle w-50">
					<p class="text-center title">Se connecter</p>
					<p>Vous n'avez pas de compte ?
						<a href="{{ path('app_inscription') }}">Créer un compte !</a>
					</p>

					<div class="d-flex justify-content-center">
						<label for="email" class="form-label">E-mail</label>
					</div>
					<div class="mb-3 d-flex justify-content-center">
						<input type="email" name="email" placeholder="ton-email@email.com" class="form-control w-50" id="email" value="{{ last_username }}" required autofocus>
					</div>

					<div class="d-flex justify-content-center">
						<label for="password" class="form-label">Mot de passe</label>
					</div>
					<div class="mb-3 d-flex justify-content-center">
						<input type="password" name="password" placeholder="Password.123" class="form-control w-50" id="password" required>
					</div>

					{% if error %}
						<div class="text-danger text-center mt-3">
							{{ error }}
						</div>
					{% endif %}

					<div class="d-flex justify-content-center mb-3">
						<a href="#">Mot de passe oublié ?</a>
					</div>

					<div class="d-flex justify-content-center">
						<button type="submit" class="btn btn-primary">Connexion</button>
					</div>
				</form>
			</div>
		</main>
	</div>
{% endblock %}
