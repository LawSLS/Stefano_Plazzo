{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="d-flex flex-column min-vh-100">
		<header>
			<nav class="navbar navbar-expand-lg bg-color">
				<div class="container-fluid">
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<img src="{{ asset('uploads/logo.png') }}" alt="logo">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link text-white" href="#">Accueil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" href="#">Estimation</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" href="#">Nous contacter</a>
							</li>
						</ul>
						<div class="d-flex">
							<button class="btn btn-primary me-2" href="#">Se connecter</button>
							<button class="btn btn-secondary" href="#">S'inscrire</button>
						</div>
					</div>
				</div>
			</nav>
		</header>

		<main class="flex-fill d-flex align-items-center">
			<div class="container d-flex justify-content-center">
				<form class="my-5 py-5 rounded-2 bg-dark-subtle w-50">
					<p class="text-center title">Se connecter</p>
					<p>Vous n'avez pas de compte ?
						<a href="#">Créer un compte !</a>
					</p>
					<div class="d-flex justify-content-center">
						<label for="exampleInputEmail1" class="form-label">Votre email</label>
					</div>
					<div class="mb-3 d-flex justify-content-center">
						<input type="email" placeholder="ton-email@email.com" class="form-control w-50" id="exampleInputEmail1" aria-describedby="emailHelp">
					</div>
					<div class="d-flex justify-content-center">
						<label for="exampleInputPassword1" class="form-label">Votre mot de passe</label>
					</div>
					<div class="mb-3 d-flex justify-content-center">
						<input type="password" placeholder="Password.123" class="form-control w-50" id="exampleInputPassword1">
					</div>
					<div class="d-flex justify-content-center mb-3">
						<a href="#">Mot de passe oublié ?</a>
					</div>
					<div class="d-flex justify-content-center">
						<button type="submit" class="btn btn-primary">Connexion</button>
					</div>
				</form>
			</div>
		</main>

		<footer class="footer mt-auto"></footer>
	</div>
{% endblock %}
