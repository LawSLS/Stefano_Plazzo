{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="d-flex flex-column min-vh-100">

		<main class="flex-fill d-flex align-items-center">
			<div class="container d-flex justify-content-center">
				<form class="my-5 py-5 rounded-2 bg-dark-subtle w-50">
					<p class="text-center title">Se connecter</p>
					<p>Vous n'avez pas de compte ?
						<a href="{{path("app_inscription")}}">Créer un compte !</a>
					</p>
					<div class="d-flex justify-content-center">
						<label for="exampleInputEmail1" class="form-label">E-mail</label>
					</div>
					<div class="mb-3 d-flex justify-content-center">
						<input type="email" placeholder="ton-email@email.com" class="form-control w-50" id="exampleInputEmail1" aria-describedby="emailHelp">
					</div>
					<div class="d-flex justify-content-center">
						<label for="exampleInputPassword1" class="form-label">Mot de passe</label>
					</div>
					<div class="mb-3 d-flex justify-content-center">
						<input type="password" placeholder="Password.123" class="form-control w-50" id="exampleInputPassword1">
					</div>
					<div class="d-flex justify-content-center mb-3">
						<a href="#">Mot de passe oublié ?</a>
					</div>
					<div class="d-flex justify-content-center">
						<button type="submit" class="btn btn-primary">Connexion</button>
					</div>
				</form>
			</div>
		</main>

	</div>
{% endblock %}
