{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<div class="text-center">
			<h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
		</div>
		<div class="d-flex flex-column align-items-center">
			<label for="username" class="mt-2">Email</label>
			<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control w-50 mt-2" autocomplete="email" required autofocus>
			<label for="password" class="mt-2">Mot de passe</label>
			<input type="password" name="_password" id="password" class="form-control w-50 mt-2" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		</div>


		{#
		            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
		            See https://symfony.com/doc/current/security/remember_me.html
		
		            <div class="checkbox mb-3">
		                <input type="checkbox" name="_remember_me" id="_remember_me">
		                <label for="_remember_me">Remember me</label>
		            </div>
		        #}
<div class="text-center mt-5">
<button class="btn btn-lg" type="submit">
			Sign in
		</button>
</div>
		
	</form>
{% endblock %}
